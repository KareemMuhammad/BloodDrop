<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="@color/white_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:id="@+id/map_container">

            <com.google.android.gms.maps.MapView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/donationMap" />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="#ffff"
                android:src="@drawable/ic_all_out_black_24dp"
                android:id="@+id/extendBtn"
                android:layout_marginTop="50dp"
                android:padding="5dp"
                />

        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0"
            android:id="@+id/buttonsContainer"
            android:padding="5dp"
            android:elevation="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/white_color"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

         <TextView
             style="@style/textView"
             android:text="@string/equipment"
             android:layout_gravity="center"
             />
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    style="@style/textView"
                    android:text="@string/city"
                    />
                    <TextView
                        android:id="@+id/cityMap"
                        style="@style/textView2"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/textView"
                        android:text="@string/departure"
                        />
                    <TextView
                        android:id="@+id/departureMap"
                        style="@style/textView2"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/textView"
                        android:text="@string/critical"
                        />
                    <TextView
                        android:id="@+id/criticalMap"
                        style="@style/textView2"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/textView"
                        android:text="@string/phone_Pro"
                        />
                    <TextView
                        android:id="@+id/phoneMap"
                        style="@style/textView2"
                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/pink_color"
                android:layout_marginTop="8dp"
                >
            </View>

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/pink_color"
                android:background="@drawable/oval_shape"
                android:padding="10dp"
                >
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/call_btn"
                    android:layout_gravity="start"
                    android:padding="8dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/ic_local_phone_black_24dp"
                    android:background="@color/pink_color"
                    />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white_color"
                    android:layout_gravity="center"
                    />
                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/reserve_btn"
                    android:padding="8dp"
                    android:background="@color/pink_color"
                    android:src="@drawable/ic_local_pharmacy_black_24dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="5dp"
                    />

            </androidx.cardview.widget.CardView>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </ScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>
